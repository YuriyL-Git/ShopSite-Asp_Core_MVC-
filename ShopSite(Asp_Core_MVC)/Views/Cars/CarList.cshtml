@using ShopSite_Asp_Core_MVC_.Models
@model CarListModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CarList</title>
</head> 
<body>
<h1>All the cars</h1>
<h3>@Model.CurrentCategory</h3>

@{
    foreach (var car in Model.AllCars)
    {
        <div>
            <h2>Model: @car.Name</h2>
            <p>Price: @car.Price.ToString("C")</p>
        </div>
    }

}
</body>
</html>
